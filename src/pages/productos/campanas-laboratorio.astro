              {
                name: 'Campana de Flujo Laminar vertical',
                image: '/ProductImages/Campana de Flujo Laminar vertical.png',
                alt: 'Campana de Flujo Laminar vertical para Laboratorio',
                height: 56
              },
              {
                name: 'Campana de Humos',
                image: '/ProductImages/Campana de Humos.png',
                alt: 'Campana de Humos para Laboratorio',
                height: 56
              },
              {
                name: 'Campana Flujo Laminar Horizontal',
                image: '/ProductImages/Campana Flujo Laminar Horizontal.png',
                alt: 'Campana Flujo Laminar Horizontal para Laboratorio',
                height: 56
              },
              {
                name: 'Campana PPL para Camara Salina',
                image: '/ProductImages/Campana PPL para Camara Salina.png',
                alt: 'Campana PPL para Camara Salino para Laboratorio',
                height: 56
              }
            ]
          },
          {
            id: 'extractores',
            title: 'Extractores',
            columns: 3,
            products: [
              {
                name: 'Extractor de lamina',
                image: '/ProductImages/Extractor de lamina.jpg',
                alt: 'Extractor de lamina para Laboratorio',
                height: 56
              },
              {
                name: 'Extractor para corrosivos',
                image: '/ProductImages/Extractor para corrosivos.jpg',
                alt: 'Extractor para corrosivos para Laboratorio',
                height: 56
              },
              {
                name: 'Brazo Extractor articulado',
                image: '/ProductImages/Brazo Extractor.jpg',
                alt: 'Brazo Extractor articulado para Laboratorio',
                height: 56
              }
            ]
          },{
            id: 'valvulas-campanas',
            title: 'Válvulas para Campanas',
            columns: 2,
            products: [
              {
                name: 'Valvula para Campana A',
                image: '/ProductImages/Valvula para campana A.jpg',
                alt: 'Válvula para Campana A',
                height: 48
              },
              {
                name: 'Válvula para Campana B',
                image: '/ProductImages/Valvula para campana B.jpg',
                alt: 'Válvula para Campana B',
                height: 48
