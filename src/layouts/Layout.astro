---
export interface Props {
	title: string;
	description?: string;
}

const { title, description = "Santre Industrial - Especialistas en mobiliario y equipamiento para laboratorios con casi 30 años de experiencia en México." } = Astro.props;

// Detectar si estamos en la página de inicio
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === "/" || currentPath === "/index.html";
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- Favicon - Using Santre Logo -->
		<link rel="icon" type="image/x-icon" href="favicon.jpeg" />
		<link rel="apple-touch-icon" href="/favicon.jpeg" />
		
		<meta name="generator" content={Astro.generator} />
		
		<!-- Enhanced SEO Meta Tags -->
		<meta name="keywords" content="laboratorios, mobiliario laboratorio, mesas laboratorio, campanas humo, equipamiento laboratorio, Santre Industrial, México, Sistema 7 Zonas, acero inoxidable, ISO 9001" />
		<meta name="author" content="Santre Industrial" />
		<meta name="robots" content="index, follow" />
		<meta name="language" content="Spanish" />
		<meta name="geo.region" content="MX" />
		<meta name="geo.country" content="México" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://santre.com/" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/Santre Expanded.png" />
		<meta property="og:site_name" content="Santre" />
		<meta property="og:locale" content="es_MX" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://santre.com/" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="/Santre Expanded.png" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href="https://santre.com/" />
		
		<!-- Fonts - Inter for professional look -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
		
		<!-- Schema.org structured data -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": "Santre Industrial",
			"description": "Especialistas en diseño, fabricación e instalación de mobiliario para laboratorios",
			"url": "https://santre.com",
			"logo": "https://santre.com/Santre Expanded.png",
			"foundingDate": "1994",
			"address": {
				"@type": "PostalAddress",
				"addressCountry": "MX"
			},
			"sameAs": [
				"https://www.linkedin.com/company/santre-industrial"
			]
		}
		</script>
		
		<title>{title}</title>
	</head>
	<body class={`font-sans ${isHomePage ? 'is-home' : ''}`}>
		<slot />
		<style>
			html {
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				scroll-behavior: smooth;
			}
		</style>
	</body>
</html> 