<!-- Modal para solicitar catálogo -->
<div id="catalog-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
  <div class="bg-white rounded-xl p-6 max-w-md w-full mx-4">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-bold text-gray-900">Solicitar Catálogo de Productos</h3>
      <button id="close-modal" class="text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <form action="https://formsubmit.co/contacto@santre.org" method="POST" class="space-y-4">
      <input type="text" name="nombre" placeholder="Nombre*" required class="w-full px-4 py-2 rounded-lg border text-gray-900" />
      <input type="email" name="email" placeholder="Correo electrónico*" required class="w-full px-4 py-2 rounded-lg border text-gray-900" />
      <input type="tel" name="telefono" placeholder="Teléfono*" required class="w-full px-4 py-2 rounded-lg border text-gray-900" />
      <input type="hidden" name="_subject" value="Solicitud de Catálogo de Productos">
      <input type="hidden" name="_next" value="https://www.santreindustrial.com/gracias">
      <input type="hidden" name="_captcha" value="false">
      <input type="hidden" name="_template" value="table">
      <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700 transition-colors">
        Solicitar Catálogo
      </button>
    </form>
  </div>
</div>

<script>
// Script simple y robusto para el modal
document.addEventListener('DOMContentLoaded', function() {
  
  const modal = document.getElementById('catalog-modal');
  const pedirCatalogoBtn = document.getElementById('pedir-catalogo-btn');
  const closeModalBtn = document.getElementById('close-modal');
  
  // Verificar que todos los elementos existen
  if (!modal) {
    console.error('Modal no encontrado');
    return;
  }
  
  if (!pedirCatalogoBtn) {
    console.error('Botón pedir-catalogo-btn no encontrado');
    return;
  }
  
  if (!closeModalBtn) {
    console.error('Botón close-modal no encontrado');
    return;
  }
  
  
  // Abrir modal
  pedirCatalogoBtn.addEventListener('click', function() {
    modal.classList.remove('hidden');
  });
  
  // Cerrar modal con botón X
  closeModalBtn.addEventListener('click', function() {
    modal.classList.add('hidden');
  });
  
  // Cerrar modal al hacer clic fuera
  modal.addEventListener('click', function(e) {
    if (e.target === modal) {
      modal.classList.add('hidden');
    }
  });
  
});
</script> 