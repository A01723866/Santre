      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/laboratorios-hospitalarios-y-clinicos" class="bg-white text-gray-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-50 transition-colors">
            ⬅️ Ver otro sector: Laboratorios Clínicos y Hospitalarios
          </a>
          <a href="/laboratorios-sector-gobierno" class="bg-white text-gray-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-50 transition-colors">
            ➡️ Ver otro sector: Laboratorios del Sector Gobierno
          </a>
          <a href="/diseno-de-laboratorio" class="bg-white text-gray-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-50 transition-colors">
            ➡️ Explora: Sistema de Diseño por Zonas
          </a>
        </div>
      </div>
    </section>
    -->
  </main>
  <Footer />

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Laboratorios para Educación e Investigación",
    "description": "Diseño de laboratorios universitarios y académicos con mobiliario modular, espacios educativos y de investigación científica",
    "provider": {
      "@type": "Organization",
      "name": "Santre Industrial",
      "url": "https://www.santreindustrial.com"
    },
    "serviceType": "Diseño de laboratorios educativos y de investigación",
    "areaServed": "México",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Servicios para laboratorios educativos",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Mesas modulares con ruedas",
            "description": "Estructura resistente para múltiples configuraciones"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Cubiertas resistentes",
            "description": "Fenólicas o acero inoxidable para uso educativo intensivo"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Sistema de las 7 Zonas",
            "description": "Diseño educativo con separación funcional"
          }
        }
      ]
    },
    "keywords": "laboratorio universitario, diseño de laboratorios escolares, mobiliario para laboratorio educativo, laboratorio de investigación científica, mobiliario académico para laboratorio"
  }
  </script>
</Layout> 