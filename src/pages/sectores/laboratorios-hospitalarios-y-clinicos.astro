    <section class="py-12 bg-gray-100">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/laboratorio-para-farmaceutica" class="bg-white text-gray-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-50 transition-colors">
            ⬅️ Ver otro sector: Laboratorios Farmacéuticos
          </a>
          <a href="/laboratorios-educacion-e-investigacion" class="bg-white text-gray-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-50 transition-colors">
            ➡️ Ver otro sector: Laboratorios de Educación e Investigación
          </a>
          <a href="/diseno-de-laboratorio" class="bg-white text-gray-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-50 transition-colors">
            ➡️ Explora: Sistema de Diseño por Zonas
          </a>
        </div>
      </div>
    </section>
    -->
  </main>
  <Footer />

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Laboratorios Hospitalarios y Clínicos",
    "description": "Diseño de laboratorios hospitalarios y clínicos con mobiliario médico, espacios funcionales y seguros para diagnóstico",
    "provider": {
      "@type": "Organization",
      "name": "Santre Industrial",
      "url": "https://santre.org"
    },
    "serviceType": "Diseño de laboratorios hospitalarios y clínicos",
    "areaServed": "México",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Servicios para laboratorios hospitalarios",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Mesas estructurales móviles",
            "description": "Con ruedas para reconfiguración flexible de espacios"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Gabinetes suspendidos",
            "description": "Para limpieza profunda y libre acceso"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Diseño por zonas funcionales",
            "description": "Optimización de flujo de trabajo clínico"
          }
        }
      ]
    },
    "keywords": "laboratorio hospitalario, diseño de laboratorio clínico, mobiliario para laboratorio médico, laboratorio de análisis clínicos, remodelación de laboratorios hospitalarios"
  }
  </script>
</Layout> 