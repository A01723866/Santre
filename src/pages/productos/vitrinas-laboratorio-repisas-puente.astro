---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Contact from '../../components/Contact.astro';
import ProductCatalog from '../../components/ProductCatalog.astro';
import '../../styles/global.css';
---

<Layout 
  title="Vitrinas de Laboratorio y Repisas Puente | Almacenamiento Elevado | Santre Industrial"
  description="Vitrinas de laboratorio y repisas puente especializadas: almacenamiento elevado, protección y organización. Diseño modular con puertas de vidrio."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-28 pb-16 bg-gradient-to-br from-blue-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Vitrinas de Laboratorio y <span class="text-blue-600">Repisas Puente</span>
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Soluciones de almacenamiento elevado con protección y visibilidad. Vitrinas especializadas y repisas puente para optimizar el espacio vertical.
          </p>
        </div>
      </div>
    </section>

    <!-- Catálogo de Productos -->
    <section class="py-16 bg-white">
      <ProductCatalog 
        sections={[
          {
            id: 'vitrinas',
            title: 'Vitrinas',
            columns: 2,
            products: [
              {
                name: 'Vitrina para Repisa',
                image: '/ProductImages/Vitrina para repisa.png',
                alt: 'Vitrina para Repisa para Laboratorio',
                height: 48
              },
              {
                name: 'Vitrina Puertas Metálicas',
                image: '/ProductImages/Vitrina puertas metalicas.png',
                alt: 'Vitrina Puertas Metálicas para Laboratorio',
                height: 48
              },
              {
                name: 'Vitrina Sin Puertas',
                image: '/ProductImages/Vitrina sin puertas.png',
                alt: 'Vitrina Sin Puertas para Laboratorio',
                height: 48
              },
              {
                name: 'Vitrina Puertas de Vidrio',
                image: '/ProductImages/Vitrinas puertas de vidrio.png',
                alt: 'Vitrina Puertas de Vidrio para Laboratorio',
                height: 48
              }
            ]
          },
          {
            id: 'repisas',
            title: 'Repisas',
            columns: 3,
            products: [
              {
                name: 'Repisa Puente Baja',
                image: '/ProductImages/Repisa puente baja sin vitrinas.png',
                alt: 'Repisa Puente Baja para Laboratorio',
                height: 68
              },
              {
                name: 'Repisa Puente Alta a Muro',
                image: '/ProductImages/Repisa alta puente a muro.png',
                alt: 'Repisa Puente Alta a Muro para Laboratorio',
                height: 68
              },
              {
                name: 'Repisa Puente Alta con Vitrina',
                image: '/ProductImages/Repisa puente con vitrinas.png',
                alt: 'Repisa Puente Alta con Vitrina para Laboratorio',
                height: 68
              }
            ]
          },
          {
            id: 'accesorios',
            title: 'Accesorios',
            columns: 2,
            products: [
              {
                name: 'Valvula para repisa',
                image: '/ProductImages/Valvula para repisa.jpg',
                alt: 'Valvula para repisa para Laboratorio',
                height: 48
              },
              {
                name: 'Toma corriente con tapa',
                image: '/ProductImages/Toma corriente con tapa.jpg',
                alt: 'Toma corriente con tapa para Laboratorio',
                height: 48
              }
            ]
          }
        ]}
      />
    </section>

    <!-- Beneficios -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">Ventajas de Nuestras Vitrinas y Repisas</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Optimización del Espacio</h3>
            <p class="text-gray-600">Aprovecha al máximo el espacio vertical sin interferir con el área de trabajo.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Máxima Visibilidad</h3>
            <p class="text-gray-600">Cristales templados y iluminación LED para localizar rápidamente el material.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Protección Integral</h3>
            <p class="text-gray-600">Protege el material del polvo, contaminación y acceso no autorizado.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-orange-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Diseño Modular</h3>
            <p class="text-gray-600">Configuraciones flexibles que se adaptan a cualquier laboratorio.</p>
          </div>
        </div>
      </div>
    </section>

    <Contact />
  </main>
  <Footer />

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Vitrinas de Laboratorio y Repisas Puente",
    "description": "Vitrinas de laboratorio y repisas puente especializadas para almacenamiento elevado, protección y organización con diseño modular",
    "manufacturer": {
      "@type": "Organization",
      "name": "Santre Industrial",
      "url": "https://santre.org"
    },
    "category": "Mobiliario de Laboratorio",
    "hasVariant": [
      {
        "@type": "ProductVariant",
        "name": "Repisa puente alta con vitrinas (mesa central)",
        "description": "Sistema elevado con puertas de vidrio para mesa central"
      },
      {
        "@type": "ProductVariant",
        "name": "Repisa puente baja sin vitrinas (mesa central)",
        "description": "Entrepaños abiertos de baja altura para mesa central"
      },
      {
        "@type": "ProductVariant",
        "name": "Repisa puente alta con vitrinas a muro",
        "description": "Sistema elevado con puertas de vidrio montado a muro (tablaroca)"
      }
    ],
    "offers": {
      "@type": "Offer",
      "availability": "https://schema.org/InStock"
    },
    "keywords": "vitrinas laboratorio, repisas puente, almacenamiento elevado, vitrina exhibición, mobiliario laboratorio"
  }
  </script>

  <script is:inline>
    // Make function globally available
    window.toggleSection = function(sectionName) {
      const content = document.getElementById(sectionName + '-content');
      const icon = document.getElementById(sectionName + '-icon');

      console.log('Toggle section:', sectionName);
      console.log('Content element:', content);
      console.log('Icon element:', icon);

      if (content && icon) {
        content.classList.toggle('hidden');
        icon.classList.toggle('rotate-180');
        console.log('Section toggled successfully');
      } else {
        console.log('Error: Content or icon not found');
      }
    };

    // Initialize all sections as OPEN by default
    function initializeSections() {
      console.log('Initializing sections...');
      const sections = ['vitrinas', 'repisas', 'accesorios'];
      sections.forEach(section => {
        const content = document.getElementById(section + '-content');
        const icon = document.getElementById(section + '-icon');
        if (content && icon) {
          // Remove hidden class to make sections open by default
          content.classList.remove('hidden');
          // Rotate icon to show it's open
          icon.classList.add('rotate-180');
          console.log('Section initialized as OPEN:', section);
        } else {
          console.log('Error initializing section:', section, 'content:', content, 'icon:', icon);
        }
      });
    }

    // Try multiple ways to ensure initialization
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initializeSections);
    } else {
      initializeSections();
    }

    // Also try after a short delay as backup
    setTimeout(initializeSections, 100);
  </script>
</Layout> 