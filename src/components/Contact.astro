<section id="contacto" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Contacta con Nosotros
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        ¿Listo para cocrear tu laboratorio ideal? Nuestro equipo de especialistas está aquí para ayudarte
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-gray-50 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">
          Solicita tu Cotización
        </h3>
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="nombre" class="block text-sm font-medium text-gray-700 mb-2">
                Nombre Completo *
              </label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Tu nombre completo"
              />
            </div>
            <div>
              <label for="empresa" class="block text-sm font-medium text-gray-700 mb-2">
                Empresa/Institución *
              </label>
              <input
                type="text"
                id="empresa"
                name="empresa"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Nombre de tu empresa"
              />
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Correo Electrónico *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="tu@email.com"
              />
            </div>
            <div>
              <label for="telefono" class="block text-sm font-medium text-gray-700 mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                id="telefono"
                name="telefono"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="+52 (55) 1234-5678"
              />
            </div>
          </div>

          <div>
            <label for="tipo-laboratorio" class="block text-sm font-medium text-gray-700 mb-2">
              Tipo de Laboratorio
            </label>
            <select
              id="tipo-laboratorio"
              name="tipo-laboratorio"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="">Selecciona el tipo</option>
              <option value="universitario">Universitario/Académico</option>
              <option value="clinico">Clínico/Hospitalario</option>
              <option value="industrial">Industrial/Control de Calidad</option>
              <option value="farmaceutico">Farmacéutico</option>
              <option value="alimentario">Alimentario</option>
              <option value="minero">Minero/Materiales</option>
              <option value="investigacion">Investigación y Desarrollo</option>
              <option value="otro">Otro</option>
            </select>
          </div>

          <div>
            <label for="mensaje" class="block text-sm font-medium text-gray-700 mb-2">
              Mensaje/Descripción del Proyecto *
            </label>
            <textarea
              id="mensaje"
              name="mensaje"
              rows="5"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Describe tu proyecto, necesidades específicas, dimensiones aproximadas del espacio, etc."
            ></textarea>
          </div>

          <div class="flex items-start">
            <input
              type="checkbox"
              id="privacidad"
              name="privacidad"
              required
              class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
            />
            <label for="privacidad" class="ml-2 text-sm text-gray-600">
              Acepto el tratamiento de mis datos personales según la política de privacidad *
            </label>
          </div>

          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-4 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
          >
            Enviar Solicitud
          </button>
        </form>
      </div>

      <!-- Contact Information -->
