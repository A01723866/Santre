    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Vitrinas de Laboratorio y Repisas Puente",
    "description": "Vitrinas de laboratorio y repisas puente especializadas para almacenamiento elevado, protección y organización con diseño modular",
    "manufacturer": {
      "@type": "Organization",
      "name": "Santre Industrial",
      "url": "https://santre.org"
    },
    "category": "Mobiliario de Laboratorio",
    "hasVariant": [
      {
        "@type": "ProductVariant",
        "name": "Vitrina de Exhibición",
        "description": "Vitrinas con cristales templados para exhibición con iluminación LED"
      },
      {
        "@type": "ProductVariant", 
        "name": "Vitrina de Seguridad",
        "description": "Almacenamiento protegido con sistema de seguridad avanzado"
      },
      {
        "@type": "ProductVariant",
        "name": "Repisa Puente Simple", 
        "description": "Entrepaños abiertos que conectan mesas de trabajo"
      }
    ],
    "offers": {
      "@type": "Offer",
      "availability": "https://schema.org/InStock"
