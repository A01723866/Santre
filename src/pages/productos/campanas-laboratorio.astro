      </div>
    </section>

    <Contact />
  </main>
  <Footer />

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Campanas de Extracción para Laboratorio",
    "description": "Campanas de extracción especializadas: química, flujo laminar, bioseguridad, perclorato y radioisótopos con certificación internacional",
    "manufacturer": {
      "@type": "Organization",
      "name": "Santre Industrial",
      "url": "https://santre.org"
    },
    "category": "Equipos de Seguridad para Laboratorio",
    "hasVariant": [
      { "@type": "ProductVariant", "name": "Campana de humo", "description": "Uso general para evacuación de vapores químicos" },
      { "@type": "ProductVariant", "name": "Campana para ácido perclórico", "description": "Interior acero 316L y lavado automático" },
      { "@type": "ProductVariant", "name": "Campana para agentes corrosivos", "description": "Estructura en polipropileno o recubrimientos anticorrosivos" },
      { "@type": "ProductVariant", "name": "Campana interior acero inoxidable", "description": "Interior SS304/316L para limpieza intensiva" },
      { "@type": "ProductVariant", "name": "Campana para solventes", "description": "Extracción de alto caudal para vapores inflamables" },
      { "@type": "ProductVariant", "name": "Campana antichispa", "description": "Componentes a prueba de explosión" },
      { "@type": "ProductVariant", "name": "Campana de flujo laminar", "description": "Flujo laminar horizontal o vertical con filtración HEPA" },
      { "@type": "ProductVariant", "name": "Campana de bioseguridad", "description": "Cabina clase I, II, III para protección biológica" },
      { "@type": "ProductVariant", "name": "Brazo extractor articulado", "description": "Extracción localizada flexible" }
    ],
    "offers": {
      "@type": "Offer",
      "availability": "https://schema.org/InStock"
    },
    "keywords": "campanas extracción laboratorio, campana química, flujo laminar, bioseguridad, ventilación laboratorio, seguridad laboratorio"
  }
  </script>

<script is:inline>
  // Make function globally available
  window.toggleSection = function(sectionName) {
    const content = document.getElementById(sectionName + '-content');
    const icon = document.getElementById(sectionName + '-icon');

    console.log('Toggle section:', sectionName);
    console.log('Content element:', content);
    console.log('Icon element:', icon);

    if (content && icon) {
      content.classList.toggle('hidden');
      icon.classList.toggle('rotate-180');
      console.log('Section toggled successfully');
    } else {
      console.log('Error: Content or icon not found');
    }
  };

  // Initialize all sections as OPEN by default
  function initializeSections() {
    console.log('Initializing sections...');
    const sections = ['vitrinas', 'repisas', 'accesorios'];
    sections.forEach(section => {
      const content = document.getElementById(section + '-content');
      const icon = document.getElementById(section + '-icon');
      if (content && icon) {
        // Remove hidden class to make sections open by default
        content.classList.remove('hidden');
        // Rotate icon to show it's open
        icon.classList.add('rotate-180');
        console.log('Section initialized as OPEN:', section);
      } else {
        console.log('Error initializing section:', section, 'content:', content, 'icon:', icon);
      }
    });
  }

  // Try multiple ways to ensure initialization
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeSections);
  } else {
    initializeSections();
  }

  // Also try after a short delay as backup
  setTimeout(initializeSections, 100);
</script>
</Layout> 