     <section class="py-16 bg-white">
      <ProductCatalog 
        sections={[
          {
            id: 'campanas',
            title: 'Campanas',
            columns: 2,
            products: [
              {
                name: 'Campana de Bioseguridad',
                image: '/ProductImages/Campana de Bioseguridad.jpg',
                alt: 'Campana de Bioseguridad para Laboratorio',
                height: 56
