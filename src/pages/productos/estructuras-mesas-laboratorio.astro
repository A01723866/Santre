    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Estructuras para Mesas de Laboratorio",
    "description": "Estructuras para mesas de laboratorio: bases metálicas, soportes modulares y sistemas de soporte resistentes y versátiles",
    "manufacturer": {
      "@type": "Organization",
      "name": "Santre Industrial",
      "url": "https://santre.org"
    },
    "category": "Mobiliario de Laboratorio",
    "hasVariant": [
      {
        "@type": "ProductVariant",
        "name": "Estructura Fija",
        "description": "Bases metálicas soldadas con máxima estabilidad hasta 300kg"
      },
      {
        "@type": "ProductVariant", 
        "name": "Estructura Modular",
        "description": "Sistema de conexiones para configuraciones personalizadas"
      },
      {
        "@type": "ProductVariant",
        "name": "Estructura Móvil", 
        "description": "Bases con ruedas para laboratorios flexibles hasta 150kg"
      }
    ],
    "offers": {
      "@type": "Offer",
