<script>
  // Infinite Scroll Carousel Functionality
  document.addEventListener('DOMContentLoaded', function() {
    const track = document.getElementById('infinite-track') as HTMLElement;
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const slides = document.querySelectorAll('.project-slide');
    
    if (!track || !prevBtn || !nextBtn || slides.length === 0) return;
    
    const slideWidth = slides[0].getBoundingClientRect().width;
    const visibleSlides = Math.floor((track.parentElement?.offsetWidth || 0) / slideWidth);
    const originalSlides = slides.length / 2; // Half of slides are duplicates
    
    let position = 0;
    let autoScrollInterval: number;
    let isTransitioning = false;
    
    // Set initial position
    updatePosition();
    
    // Start auto scroll
    startAutoScroll();
    
    function startAutoScroll() {
      autoScrollInterval = window.setInterval(() => {
        if (!isTransitioning) {
          next();
        }
      }, 3000);
    }
    
    function stopAutoScroll() {
      window.clearInterval(autoScrollInterval);
        }
    
    function updatePosition(smooth = true) {
      if (!track) return;
      
      if (smooth) {
        track.style.transition = 'transform 500ms ease-out';
        } else {
        track.style.transition = 'none';
      }
      
      track.style.transform = `translateX(${-position * slideWidth}px)`;
    }
    
    function next() {
      if (isTransitioning) return;
      isTransitioning = true;
      
      position++;
      updatePosition();
      
      // If we've scrolled past the original slides, reset to the beginning without animation
      if (position >= originalSlides) {
        setTimeout(() => {
          position = 0;
          updatePosition(false);
          isTransitioning = false;
        }, 500);
      } else {
        setTimeout(() => {
          isTransitioning = false;
        }, 500);
      }
    }
    
    function prev() {
      if (isTransitioning) return;
      isTransitioning = true;
      
      position--;
      updatePosition();
      
      // If we've scrolled to before the first slide, reset to the end without animation
      if (position < 0) {
        setTimeout(() => {
          position = originalSlides - 1;
          updatePosition(false);
          isTransitioning = false;
        }, 500);
      } else {
        setTimeout(() => {
          isTransitioning = false;
        }, 500);
      }
    }
    
    // Event listeners
    if (nextBtn) {
      nextBtn.addEventListener('click', () => {
        stopAutoScroll();
        next();
        startAutoScroll();
      });
    }
    
    if (prevBtn) {
      prevBtn.addEventListener('click', () => {
        stopAutoScroll();
        prev();
        startAutoScroll();
      });
    }
    
    // Touch/swipe support
    let startX = 0;
    let startY = 0;
    
    if (track) {
      track.addEventListener('touchstart', (e) => {
        stopAutoScroll();
        startX = e.touches[0].clientX;
        startY = e.touches[0].clientY;
      }, {passive: true});
      
      track.addEventListener('touchend', (e) => {
        const endX = e.changedTouches[0].clientX;
        const endY = e.changedTouches[0].clientY;
        const deltaX = startX - endX;
        const deltaY = startY - endY;
        
        // Check if horizontal swipe is more significant than vertical
        if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > 50) {
          if (deltaX > 0) {
            next();
          } else {
            prev();
          }
        }
        
        startAutoScroll();
      }, {passive: true});
      
      // Pause auto scroll when hovering
      track.parentElement?.addEventListener('mouseenter', stopAutoScroll);
      track.parentElement?.addEventListener('mouseleave', startAutoScroll);
    }
    
    // Handle resize
    window.addEventListener('resize', () => {
      const newSlideWidth = slides[0].getBoundingClientRect().width;
      if (newSlideWidth !== slideWidth) {
        // Recalculate position based on new slide width
        updatePosition(false);
      }
    });
  });
</script> 