---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Contact from '../../components/Contact.astro';
import ProductCatalog from '../../components/ProductCatalog.astro';
import '../../styles/global.css';
---

<Layout 
  title="Gabinetes de Seguridad para Laboratorio | Santre Industrial"
  description="Gabinetes de seguridad para laboratorio: con puerta, cajones, combinados, rinconeros, suspendidos y móviles. Máxima organización y funcionalidad. Diseño modular."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-28 pb-16 bg-gradient-to-br from-blue-50 to-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
              <span class="text-blue-600">Gabinetes</span> de Seguridad para Laboratorio
            </h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Gabinetes de seguridad para laboratorio: con puerta, cajones, combinados, rinconeros, suspendidos y móviles. Máxima organización y funcionalidad. Diseño modular.
            </p>
          </div>
        </div>
      </section>

    <!-- Catálogo de Productos -->
    <section class="py-16 bg-white">
      <ProductCatalog 
        sections={[
          {
            id: 'gabinetes-seguridad',
            title: 'Gabinetes',
            columns: 2,
            products: [
              {
                name: 'Gabinete para guardar corrosivos',
                image: '/ProductImages/Gabinete Corrosivos.png',
                alt: 'Gabinete de seguridad azul para sustancias corrosivas, con doble puerta, estantes de polietileno y capacidad para 45 galones, cumple normativas OSHA',
                height: 60
              },
              {
                name: 'Gabinete para guardar inflamables',
                image: '/ProductImages/Gabinete Flamables.png',
                alt: 'Gabinete de seguridad Justrite amarillo para sustancias inflamables, con doble puerta de auto-cierre y capacidad para 45 galones, certificado FM y cumple OSHA',
                height: 60
              }
            ]
          },
          {
            id: 'armarios-seguridad',
            title: 'Armarios',
            columns: 2,
            products: [
              {
                name: 'Armario puertas con vidrio',
                image: '/ProductImages/Armario PV.png',
                alt: 'Estante armario de laboratorio con 5 entrepaños ajustables y dos puertas abatibles de cristal con cerradura, ideal para muestras y reactivos inertes',
                height: 60
              },
              {
                name: 'Armario puertas metalicas',
                image: '/ProductImages/Armario PM.png',
                alt: 'Estante armario de laboratorio con 5 entrepaños ajustables y dos puertas abatibles metalicas con cerradura, ideal para muestras y reactivos inertes',
                height: 60
              }
            ]
          },
          {
            id: 'estantes-seguridad',
            title: 'Estantes',
            columns: 2,
            products: [
              {
                name: 'Carrro viajero de inox',
                image: '/ProductImages/Carro de inoxidable.png',
                alt: 'Carro viajero de acero inoxidable T-304 para laboratorio, con cubierta, entrepaño y ruedas con freno, ideal para transporte seguro de muestras',
                height: 60
              },
              {
                name: 'Estante Abierto alta resistencia',
                image: '/ProductImages/Estante Abiertos.png',
                alt: 'Estante de laboratorio de PTR con 5 entrepaños ajustables, fabricado en lámina galvanizada con pintura electrostática, resistente y estable',
                height: 60
              }
            ]
          }
        ]}
      />
    </section>


    <Contact />
  </main>
  <Footer />

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Estación de Emergencia para Laboratorio",
    "description": "Estaciones de emergencia para laboratorios con duchas de seguridad y lavaojos que cumplen con normativas de seguridad industrial",
    "manufacturer": {
      "@type": "Organization",
      "name": "Santre Industrial",
      "url": "https://www.santreindustrial.com"
    },
    "category": "Equipos de Seguridad Industrial",
    "hasVariant": [
      {
        "@type": "ProductVariant",
        "name": "Ducha de Emergencia",
        "description": "Ducha de emergencia para laboratorios con activación manual"
      },
      {
        "@type": "ProductVariant",
        "name": "Lavaojos de Emergencia",
        "description": "Lavaojos de emergencia para laboratorios con activación manual"
      }
    ],
    "offers": {
      "@type": "Offer",
      "availability": "https://schema.org/InStock"
    },
    "keywords": "estacion emergencia, ducha emergencia, lavaojos emergencia, seguridad laboratorio, equipos seguridad industrial"
  }
  </script>

