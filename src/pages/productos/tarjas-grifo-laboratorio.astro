    "url": "https://www.santreindustrial.comproductos/tarjas-grifo-laboratorio",
    "image": "https://www.santreindustrial.comProductImages/Tarja Inox isla.png",
    "brand": {
      "@type": "Brand",
      "name": "Santre Industrial"
    },
    "manufacturer": {
      "@type": "Organization",
