      </div>
      
      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <button id="mobile-menu-btn" class="text-gray-700 hover:text-blue-600 p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
