  <!-- JavaScript para la selección de estilos -->
  <script is:inline>
    let selectedStyle = null;

    function selectTableStyle(style) {
      // Remover selección previa
      document.querySelectorAll('[id^="style-"]').forEach(el => {
        el.classList.remove('ring-2', 'ring-blue-500', 'ring-green-500', 'ring-purple-500');
        el.classList.remove('scale-105');
      });

      // Seleccionar nuevo estilo
      const selectedElement = document.getElementById(`style-${style}`);
      selectedElement.classList.add('ring-2', 'scale-105');

      // Aplicar color de anillo según el estilo
      if (style === 'modular') {
        selectedElement.classList.add('ring-blue-500');
      } else if (style === 'estructural-fija') {
        selectedElement.classList.add('ring-orange-500');
      } else if (style === 'estructural-movil') {
        selectedElement.classList.add('ring-yellow-500');
      }

      // Mostrar información del estilo seleccionado
      selectedStyle = style;
      showStyleInfo(style);
      showGabinetesCatalogo(style);
    }

    function showStyleInfo(style) {
      const styleInfo = document.getElementById('style-info');
      const styleName = document.getElementById('selected-style-name');
      const styleDescription = document.getElementById('style-description');

      const styles = {
        'modular': {
          name: 'Modular Fija',
          description: 'Ideal para laboratorios educativos y espacios multifuncionales. Ofrece máxima estabilidad y gran capacidad de almacenaje con gabinetes fijos a piso. Compatible con cubiertas de hasta 295 cm (acero inoxidable) o 305 cm (resina fenólica).'
        },
        'estructural-fija': {
          name: 'Estructural Fija',
          description: 'Perfecta para laboratorios que requieren resistencia superior y flexibilidad para reconfiguraciones futuras. Estructura de PTR con asnillas y travesaños, admite gabinetes colgantes o rodantes. Resiste mayor carga que una mesa fija convencional.'
        },
