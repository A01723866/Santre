---
export interface Props {
  sections: {
    id: string;
    title: string;
    columns: number;
    products: {
      name: string;
      image: string;
      alt: string;
      height: number;
    }[];
  }[];
}

const { sections } = Astro.props;
---

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

  {sections.map((section) => (
    <div class="mb-8">
        <section id={section.id} class={`w-full text-left bg-blue-100 hover:bg-blue-200 text-gray-700 px-6 py-4 rounded-lg font-semibold hover:opacity-90 transition-all flex items-center justify-between`} aria-labelledby={`${section.id}-h2`}>
                <header>
                <h2 id={`${section.id}-h2`} ><span>{section.title}</span></h2>
                </header>
        </section>
        <div class={`mt-6 grid grid-cols-${section.columns} md:grid-cols-${section.columns} gap-4`}>
                {section.products.map((product) => (
                <article class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden">
                    <div class={`h-${product.height} bg-white flex items-center justify-center p-4`}>
                    <img 
                        src={product.image} 
                        alt={product.alt} 
                        class="max-w-full max-h-full object-contain"
                        width="600" height="400"
                        loading="lazy"
                    >
                    </div>
                    <div class="p-3 text-center">
                    <h3 class="text-base font-medium text-gray-900">{product.name}</h3>
                    </div>
                </article>
                ))}
        </div>
    </div>
  ))}
</div>

