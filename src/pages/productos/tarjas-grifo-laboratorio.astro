---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Contact from '../../components/Contact.astro';
import ProductCatalog from '../../components/ProductCatalog.astro';
import '../../styles/global.css';
---

<Layout 
  title="Tarjas y Grifo para Laboratorio | Llaves, Escurrideros y Sistemas de Agua | Santre Industrial"
  description="Tarjas y grifo especializados para laboratorio: llaves de emergencia, escurrideros, sistemas de agua y grifería especializada. Acero inoxidable y materiales resistentes."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-28 pb-16 bg-gradient-to-br from-blue-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Tarjas y Grifo para Laboratorio de <span class="text-blue-600">Calidad Profesional</span>
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Sistemas completos de lavado y grifería especializada: tarjas, grifos de emergencia, escurrideros y sistemas de agua. Diseño ergonómico y materiales de primera calidad.
          </p>
        </div>
      </div>
    </section>

    <!-- Catálogo de Productos -->
    <section class="py-16 bg-white">
      <ProductCatalog 
        sections={[
          {
            id: 'cubiertas-tarjas',
            title: 'Cubiertas Para Tarjas',
            columns: 2,
            products: [
              {
                name: 'Cubierta Inoxidable para isla',
                image: '/ProductImages/Tarja Inox isla.png',
                alt: 'Cubierta Inoxidable para isla',
                height: 48
              },
              {
                name: 'Cubierta Inoxidable para Muro',
                image: '/ProductImages/Tarja Inox muro.png',
                alt: 'Cubierta Inoxidable para Muro',
                height: 48
              },
              {
                name: 'Cubierta Negra para Isla',
                image: '/ProductImages/Tarja Fenolica isla Negra.png',
                alt: 'Cubierta color negro para isla',
                height: 48
              },
              {
                name: 'Cubierta Negra para Muro',
                image: '/ProductImages/Tarja Fenolica muro Negra.png',
                alt: 'Cubierta color negro para muro',
                height: 48
              }
            ]
          },
          {
            id: 'llaves',
            title: 'Llaves',
            columns: 2,
            products: [
              {
                name: 'Llave de Sencilla',
                image: '/ProductImages/Llave Sencilla.png',
                alt: 'Llave inoxidable sencilla',
                height: 68
              },
              {
                name: 'Mezcladora',
                image: '/ProductImages/Mezcladora.png',
                alt: 'Llave mezcladora inoxidable',
                height: 68
              },
            ]
          },
          {
            id: 'escuridores',
            title: 'Escuridores',
            columns: 2,
            products: [
              {
                name: 'Escuridero Fenolico',
                image: '/ProductImages/Escurridor Fenolico.png',
                alt: 'Escuridero de productos fenolico color negro con tubos',
                height: 68
              },
              {
                name: 'Escuridero Inoxidable',
                image: '/ProductImages/Escurridor inoxidable.png',
                alt: 'Escuridero de productos fenolico inoxidable con tubos',
                height: 68
              }
            ]
          },
          {
            id: 'acrilicos',
            title: 'Acrílicos Antisalpicaduras',
            columns: 2,
            products: [
              {
                name: 'Acrílico Antisalpicaduras Lateral',
                image: '/ProductImages/Acrilico Lateral.png',
                alt: 'Acrílico antisalpicaduras lateral transparente',
                height: 68
              },
              {
                name: 'Acrílico Antisalpicaduras para Isla',
                image: '/ProductImages/Acrilico para Isla.png',
                alt: 'Acrílico antisalpicaduras para isla transparente',
                height: 68
              }

            ]
          },
          {
            id: 'gabinetes-tarjas',
            title: 'Gabinetes con Tarjas',
            columns: 2,
            products: [
              {
                name: 'Gabinete con Tarja',
                image: '/ProductImages/Gabinete Tarja 1P.png',
                alt: 'Gabinete con tarja inoxidable de una puerta',
                height: 68
              },
              {
                name: 'Gabinete con Tarja 2 Puertas',
                image: '/ProductImages/Gabinete Tarja 2P.png',
                alt: 'Gabinete con tarja inoxidable de dos puertas',
                height: 68
              }
            ]
          }
        ]}
      />
    </section>

    <!-- Beneficios -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">Ventajas de Nuestras Tarjas y Grifería</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Calidad Certificada</h3>
            <p class="text-gray-600">Productos certificados que cumplen con normas internacionales de seguridad.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Resistencia Química</h3>
            <p class="text-gray-600">Materiales seleccionados por su resistencia a ácidos, bases y solventes.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Diseño Ergonómico</h3>
            <p class="text-gray-600">Diseño centrado en el usuario para máxima comodidad y eficiencia.</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-orange-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Fácil Mantenimiento</h3>
            <p class="text-gray-600">Superficies lisas y accesibles que facilitan la limpieza y desinfección.</p>
          </div>
        </div>
      </div>
    </section>

    <Contact />
  </main>
  <Footer />

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Tarjas y Grifo para Laboratorio",
    "description": "Tarjas y grifo especializados para laboratorio: grifería de emergencia, escurrideros, sistemas de agua y accesorios complementarios",
    "manufacturer": {
      "@type": "Organization",
      "name": "Santre Industrial",
      "url": "https://santre.org"
    },
    "category": "Mobiliario de Laboratorio",
    "hasVariant": [
      { "@type": "ProductVariant", "name": "Grifo mezcladora", "description": "Grifo doble mando para agua fría y caliente" },
      { "@type": "ProductVariant", "name": "Grifo llave sencilla", "description": "Llave individual para agua o gases" },
      { "@type": "ProductVariant", "name": "Tarjas murales o en isla", "description": "Tarjas de acero inoxidable para diferentes montajes" },
      { "@type": "ProductVariant", "name": "Acrílico antisalpicaduras", "description": "Paneles protectores para evitar salpicaduras" },
      { "@type": "ProductVariant", "name": "Válvulas sobre cubierta", "description": "Válvulas integradas para agua/gas/vacío" }
    ],
    "offers": {
      "@type": "Offer",
      "availability": "https://schema.org/InStock"
    },
    "keywords": "tarjas laboratorio, grifos laboratorio, grifo emergencia, escurrideros, sistemas agua, grifería especializada"
  }
  </script>
</Layout> 